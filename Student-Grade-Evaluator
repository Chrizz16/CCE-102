package Practice_Lang;
 import java.io.File;
 import java.io.FileWriter;
 import java.io.IOException;
 import java.util.Scanner;
 
public class Student_Grade_Evaluator {
    public static double[] collectGrades() {
	//public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("How many students in the class? ");
		int students = sc.nextInt();
		
		double[] grade = new double[students];
		System.out.println("Enter grades for " + students + " students:");
			
		for (int i = 0; i < grade.length; i++) {
			System.out.print("Student " + (i + 1) + ": ");
			grade[i] = sc.nextDouble();
		}
		return grade;
    }
    			public static String evaluateStatus(double grade) {
				if (grade > 90) {
					return " - Dean's Lister";
				} else if (grade >= 75) {
					return " - Passed";
				}else {
					return " - Failed";
				}
			}
			
			public static void  exportResults(String text) {
				try {
					
				FileWriter writer = new FileWriter("class_records.txt");
				writer.write(" ");
				writer.close();
				System.out.println("\n\nSaved records to class_records.txt");
		    } catch (IOException e) {
		    	System.out.println("Error writing file");
		    }
				}

				public static void main(String [] args) {
					double[] students = collectGrades ();
					StringBuilder logBuilder = new StringBuilder();	
						for (int i = 0; i <students.length; i++) {
							String status = evaluateStatus(students [i]);
							String output = "Student" + (i + 1) + ":" + students[i] + "" + status;
							System.out.println(output);
							logBuilder.append(output).append("\n");
						}
						exportResults(logBuilder.toString());
						}
				}
